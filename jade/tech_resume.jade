include ./partials/bio.jade
include ./partials/resume.jade

doctype
html
  head
    title Peter Andringa
    meta(name="viewport" content="width=device-width, user-scalable=0, maximum-scale=1.0, minimum-scale=1.0, initial-scale=1.0")
    link(href='https://fonts.googleapis.com/css?family=Quattrocento:400,600|Source+Sans+Pro:400,700' rel='stylesheet' type='text/css')
    link(rel="stylesheet" href="css/main.css")
    style.
      @media print {
        body section.bio .bio-header-group {
          width: 28% !important;
        }
        body section.resume {
          margin-top: 0.7in !important;
        }
        body section.resume .resume-item {
          margin-top: 0.5em !important;
        }
        body section.resume .section-head {
          margin-top: 1.1em !important;
        }
        body section.resume .resume-item .header {
          line-height: 1em !important;
        }
      }
  body
    section.bio
      +bio(tech_bio)

    section.resume
      +resume(tech_resume)
